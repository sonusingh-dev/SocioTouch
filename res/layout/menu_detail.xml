<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout5" android:layout_height="wrap_content">
		<ImageView android:layout_alignParentLeft="true" android:id="@+id/imgItem" style="@style/img_menu_detail"/>
		<LinearLayout android:id="@+id/linearLayout3"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:layout_width="match_parent" android:layout_weight="1">
			<TextView android:id="@+id/lblMenuName" android:text="Name"
				style="@style/lbl_menu_name" />
			<TextView android:id="@+id/lblMenuDesc" android:text="Description"
				style="@style/lbl_menu_desc" />
			<TextView android:id="@+id/textView1" android:text="Nutritional...."
				style="@style/lbl_data" />
		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:id="@+id/linearLayout2" android:layout_height="match_parent">
			<LinearLayout android:id="@+id/linearLayout3"
				android:orientation="vertical" android:layout_height="wrap_content"
				android:layout_width="match_parent" android:layout_weight="1"
				android:gravity="right">
				<ToggleButton style="@style/btn_gray" android:id="@+id/btnPriceOrdered"
					android:layout_width="wrap_content"
					android:textOn="Ordered" android:layout_height="wrap_content" android:textOff="Price" />
				<Button android:id="@+id/button1" android:layout_width="wrap_content"
					android:layout_height="wrap_content" style="@style/btn_gray"
					android:text="Add to Favorites" />
			</LinearLayout>

			<ImageView android:id="@+id/imgMenuType"
				style="@style/img_menu_type"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/linearLayout4" android:layout_height="match_parent">
		<TextView android:id="@+id/textView2" android:text="Description"
			style="@style/lbl_data" />
	</LinearLayout>
</LinearLayout>
